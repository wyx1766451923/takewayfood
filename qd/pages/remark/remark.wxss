
.textarea{
  background: rgb(238, 236, 236) !important;
  height: 120px !important;
  padding: 10px !important;
}
.shortcut{
  margin: 0 15px;
}
.title{
  font-size: 14px;
  color: gray;
  padding-bottom: 10px;
}
.cueWord{
  display: flex;
  flex-wrap: wrap;
  justify-content:flex-start;
}
.worditem{
  font-size: 14px;
  border: 1px solid rgb(207, 206, 206);
  margin-left: 10px;
  padding: 5px 10px;
  margin-bottom: 10px;
  border-radius: 10px;
}
.confirm{
  margin: 5px 15px;
  border-radius: 10px;
  overflow: hidden;
}
.clear{
  position: absolute;
  right:4px;
  top: 4px;
}
