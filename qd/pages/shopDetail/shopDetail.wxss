/* pages/shopDetail/shopDetail.wxss */
page{
  background-color: #FFFFFF;
  height: 100%;
  overflow-y: hidden;
  overflow-x: hidden;
}
.shopdetail{
  width: 100%;
  height: 100%;
}

.shopcard{
  width: 100%;
  height: 200px;

}
.mainVtabs{
  width: 100%;
  height: 75%;
  display: flex;
}
.backImg{
  width: 100%;
  height: 75%;
  filter: blur(3px);
}
.back{
  position: absolute;
  top: 30px;
  left: 10px;
  z-index: 100;
}
.shopMsg{
  display: flex;
  position: relative;
  top: -80px;
  left: 8px;
  border-radius: 15px;
  background: white;
  box-shadow:0px 0px 10px rgb(190, 189, 189);
  width: 95%;
  height: 100px;
  z-index: 100;

}
.shopImg{
  width: 50px;
  height: 50px;
  border-radius: 10px;
  overflow: hidden;
  padding: 15px 0 0 10px;
  flex-shrink: 0;
}
.shopInfo{
  padding:15px 5px 5px 10px;
  font-size: 14px;
  width: 100%;
}
.shopName{
  font-size: 16px;
  width: 90%;
  font-weight: bold;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.deliveryTime{
  padding: 2px 0 2px 0;
  font-size: 12px;
  color:gray;
}
.announcement{
  width: 95%;
  font-size: 14px;
  color:gray;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.announcementDetail{
  position: absolute;
  padding: 0 10px 20px 10px;
  top: 90px;
  left: 60px;
  white-space:normal;
  width: 200px;
  height: auto;
  background: white;
  box-shadow:0px 0px 10px rgb(190, 189, 189);
  display: block;
}

.normal{
  display:none;
}
.foods{
  width: 100%;
  height: 100%;
}
.fooditem{
  display: flex;
  width: 100%;
  height: 85px;
  margin: 10px 5px 10px 5px;
}
.foodImg{
  width: 80px;
  height: 80px;
  border-radius: 10px;
  overflow: hidden;
  flex-shrink: 0;
  padding-top: 5px;
}
.foodInfo{
  padding-left: 5px;
  width: 100%;
}
.foodName{
  width: 90%;
  font-size: 16px;
  white-space: nowrap;
  overflow:hidden; 
  text-overflow:ellipsis;
}
.sales{
  font-size: 12px;
  color: gray;
}
.discount{
  font-size: 10px;
  color: red;
  width: 50px;
  text-align: center;
  border-radius: 6px;
  border:1px solid red ;
}
.priceAndOp{
  display: flex;
  justify-content: space-between;
}
.price{
  color:red;
  padding-top: 2px;
}
.op{
  margin-right: 10px;
}
.rmb{
  font-size: 12px;
  margin-right: -4px;
}
.oldPrice{
  font-size: 12px;
  color: gray;
  text-decoration: line-through;
}
.menu{
  height: 100%;
  width: 100px;
  background: rgb(240, 240, 240);
  border-right:1px solid rgb(233, 233, 233) ;
}
.content{
  height: 21.87rem;/*后续改为100%*/
  width: 100%;
}
.vtabitem:last-child{
  padding-bottom: 1.875rem;
}
.menuitem{
  text-align: center;
  line-height: 50px;
  width: 100%;
  font-size: 14px;
}
.active{
  background: white;
  border-left: 4px solid orange;
}
.addfood{
  background: rgb(238, 237, 237);
  padding: 2px;
}
.stepper{
  width: 20px;
}
.van-stepper__input{
  background: white !important;
  width: var(--stepper-input-width,15px) !important;
  color: black !important;
}
.van-stepper__minus, .van-stepper__plus{
  height: var(--stepper-input-height,20px) !important;
  width: var(--stepper-input-height,20px) !important;
}
.bugcard{
  display: flex;
  width: 95%;
  margin: 0 0 0 0.5rem;
  border-radius: 10px;
  background: rgb(85, 84, 84);
  color: white;
  justify-content: space-between;
  position: fixed;
  height: 50px;
  bottom: 0;
  z-index: 101;
}
.cardTotle{
  display: flex;
  align-items: center;
  padding-left: 8px;
}
.badge{
  width: 15px;
  height: 15px;
  font-size: 12px;
  text-align: center;
  line-height: 15px;
  border-radius: 50%;
  background: red;
  position: absolute;
  left: 2.375rem;
  top: 0.375rem;

}
.total{
  padding-left: 10px;
}
.chosen{
  width: 65px;
  background-color: orange;
  text-align: center;
  border-radius: 0 10px 10px 0;
  overflow: hidden;
  line-height: 50px;
}
.nochosen{
  width: 65px;
  background-color: gray;
  text-align: center;
  border-radius: 0 10px 10px 0;
  overflow: hidden;
  line-height: 50px;
}
.van-popup{
  border-radius: 14px !important;
  overflow-y: hidden !important;
}
.carthead{
  display: flex;
  justify-content: space-between;
  padding: 15px 7px 10px 7px;
  font-size: 14px;
}
.clearcart{
  color: gray;
}
.slogan{
  padding: 7px;
  margin:3px 7px 3px 7px;
  line-height: 16px;
  font-size: 12px;
  border-radius: 8px;
  background: rgb(238, 252, 238);
  color: rgb(95, 177, 95);
}
.cartfoodlist{
  height: 60%;
  overflow-y: scroll;

}
.fooditemcart{
  display: flex;
  width: 100%;
  height: 85px;
  margin: 0px 5px 3px 5px;
}
.pricecart{
  color:red;
  padding-top: 20px;
}
