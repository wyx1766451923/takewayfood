/* pages/my/my.wxss */
page{
  height: 100%;
  width: 100%;
}
.my{
  width: 100%;
  height: 100%;
  background: linear-gradient(rgb(156, 230, 156),white);
}
.userinfo{
  text-align: center;
  padding-top: 20px;
  width: 100%;
  height:150px;
}
.avatar{
  margin: 0 auto;
  width: 80px;
  height: 80px;
  border-radius: 50%;
  overflow: hidden;
}
.editUserInfo{
  position: absolute;
  padding-left: 10px;

}
.nickname{
  padding-top: 10px;
}
.setting{
  margin: 10px 15px;
  border-radius: 10px;
  overflow: hidden;
}
.contactPopUp{
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10px;
  width: 200px;
}
.AboutPopUp{
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10px;
  width: 200px;  
}
.title{
  text-align: center;
  padding: 10px 0 10px 0;
}
.watchAddress{
  width: 100%;
  height: calc(100% - 41px - 50px);
  padding: 0 10px;
}
.addressgroup{
  width: 100%;
  height: 100%;
}
.addressitem{
  width: calc(100vw - 50px);
  padding: 10px 0;
  border-bottom: 1px solid rgb(233, 230, 230);
  display: flex;
  justify-content: space-between;

}
.info{
  font-size: 14px;
}
.address{
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.nameAndPhone{
  font-size: 12px;
  color: gray;

}
.delete{
  padding-top: 15px;


}
.editAddress{
  margin-left: 5px;
  padding-top: 15px;
}
.addAddress{
  padding: 0 10px 0 10px;
}
.van-button{
  border-radius: 10px !important;

}
.operate{
  margin-right: 10px;
  display: flex;
}
.noaddress{
  height: calc(100% - 41px - 50px);
  padding: 0 10px;
  overflow: hidden;
}
.van-empty__image{
  width: 100px !important;
  height: 100px !important;
}
.van-empty{
  padding: 0 !important;
}